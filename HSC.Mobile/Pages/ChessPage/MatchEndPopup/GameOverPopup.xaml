<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="HSC.Mobile.Pages.ChessPage.MatchEndPopup.GameOverPopup"
               x:Name="thisPopup">

    <VerticalStackLayout HorizontalOptions="Center" BindingContext="{x:Reference thisPopup}" WidthRequest="250" BackgroundColor="{DynamicResource BackgroundColor}">
        <Label FontSize="24" Text="{Binding Main}" Padding="10, 10, 10, 20" HorizontalOptions="Center"/>
        <Label FontSize="18" Text="{Binding Details}" Padding="10, 0, 10, 40" HorizontalOptions="Center"/>
        <Label FontSize="20" Text="{Binding MoneyChange}" TextColor="{Binding MoneyChangeColor}" Padding="10, 0, 10, 10" HorizontalOptions="Center"/>
    </VerticalStackLayout>

</toolkit:Popup>

